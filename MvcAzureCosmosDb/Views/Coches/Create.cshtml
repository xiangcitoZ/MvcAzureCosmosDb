@model MvcAzureCosmosDb.Models.Vehiculo

@section Scripts{
<script>

        $(document).ready(function () {
            $("#existemotor").click(function(){
                $("#capamotor").toggle();
            })
        })
</script>
  
}


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VelocidadMaxima" class="control-label"></label>
                <input asp-for="VelocidadMaxima" class="form-control" />
                <span asp-validation-for="VelocidadMaxima" class="text-danger"></span>
            </div>

            <input type="checkbox" id="existemotor"
                name="existemotor" value="true"/>Vehículo con Motor

            <div id="capamotor" style="display:none">
                <label>Tipo Motor:</label>
                <input type="text" name="Motor.Tipo" class="form-control"/>
                <label>Caballos:</label>
                <input type="text" name="Motor.Caballos" class="form-control" />
                <label>Cilindrada:</label>
                <input type="text" name="Motor.Cilindrada" class="form-control" />
                <label>Turbo:</label>
                <input  type="checkbox" value="true"
                    name="Motor.Turbo" class="form-check" />


            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


