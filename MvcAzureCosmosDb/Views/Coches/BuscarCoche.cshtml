@model List<Vehiculo>

    <h1 style="color:blue"> Buscador Coches Cosmos Db</h1>

    <form method="post">
        <label>Introduzca marca: </label>
        <input type="text" name="marca" class="form-control"/>
        <button class="btn btn-outline-dark">
            Filtrar
        </button>

    </form>

    @if(Model != null)
    {
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                   MARCA
                </th>
                <th>
                    MODELO
                </th>
                <th>
                    IMAGEN
                </th>
                <th>
                    VELOCIDAD MAXIMA
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        <img src="@item.Imagen" style="width:90px;height:90px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VelocidadMaxima)
                    </td>
                    <td>
                        <a class="btn btn-success"
                   asp-area=""
                   asp-controller="Coches"
                   asp-action="Details"
                   asp-route-id="@item.Id">Detalles</a>

                        <a class="btn btn-danger"
                   asp-area=""
                   asp-controller="Coches"
                   asp-action="Delete"
                   asp-route-id="@item.Id">Delete</a>

                        <a class="btn btn-warning"
                   asp-area=""
                   asp-controller="Coches"
                   asp-action="Edit"
                   asp-route-id="@item.Id">EDITAR</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }